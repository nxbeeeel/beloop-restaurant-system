{
  "name": "@beloop/pos",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host --port 3002",
    "dev:local": "vite --host localhost --port 3002",
    "build": "tsc -b && vite build",
    "build:electron": "npm run build && electron-builder",
    "build:mobile": "npm run build && cap build",
    "preview": "vite preview --port 3002",
    "lint": "eslint .",
    "start": "vite --host --port 3002",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3002 && electron .\"",
    "electron:pack": "electron-builder --dir",
    "electron:dist": "electron-builder",
    "mobile:init": "cap init",
    "mobile:add:android": "cap add android",
    "mobile:sync": "cap sync",
    "mobile:run:android": "cap run android",
    "build:all": "node scripts/build-all-platforms.js",
    "deploy:web": "npm run build && echo 'Upload dist/ folder to your web server'",
    "deploy:electron": "npm run electron:dist && echo 'Distribute files from dist-electron/'",
    "deploy:mobile": "npm run build && cap sync && echo 'Build mobile apps with Android Studio/Xcode'"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.5",
    "lucide-react": "^0.294.0",
    "razorpay": "^2.9.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-qr-code": "^2.0.12",
    "react-router-dom": "^6.24.1",
    "react-speech-recognition": "^3.10.0",
    "recharts": "^2.8.0",
    "socket.io-client": "^4.7.5",
    "uuid": "^9.0.1",
    "workbox-window": "^7.0.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@capacitor/android": "^5.5.1",
    "@capacitor/cli": "^5.5.1",
    "@capacitor/core": "^5.5.1",
    "@capacitor/ios": "^5.5.1",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.8.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vite": "^5.3.1",
    "vite-plugin-pwa": "^0.17.4",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "main": "electron/main.js",
  "homepage": "./",
  "build": {
    "appId": "com.beloop.pos",
    "productName": "Beloop POS",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
