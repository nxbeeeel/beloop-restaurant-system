{
  "name": "beloop-restaurant-management",
  "version": "1.0.0",
  "description": "Premium Enterprise Restaurant Management System for Indian F&B Market",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:admin\" \"npm run dev:pos\"",
    "dev:backend": "cd apps/backend && npm run dev",
    "dev:admin": "cd apps/admin && npm run dev",
    "dev:pos": "cd apps/pos && npm run dev",

    "build": "npm run build:backend && npm run build:admin && npm run build:pos",
    "build:backend": "cd apps/backend && npm run build",
    "build:admin": "cd apps/admin && npm run build",
    "build:pos": "cd apps/pos && npm run build",

    "start": "cd apps/backend && npm start",
    "start:backend": "cd apps/backend && npm start",
    "test": "npm run test:backend && npm run test:admin && npm run test:pos",
    "test:backend": "cd apps/backend && npm test",
    "test:admin": "cd apps/admin && npm test",
    "test:pos": "cd apps/pos && npm test",
    "lint": "npm run lint:backend && npm run lint:admin && npm run lint:pos",
    "lint:backend": "cd apps/backend && npm run lint",
    "lint:admin": "cd apps/admin && npm run lint",
    "lint:pos": "cd apps/pos && npm run lint"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
